<div class="container containerForm rubberBand">

    {{!-- <hr class="divider"> --}}
    <p id="textSign"> <strong> New to Take A Hike? Sign Up Now!</strong> </p>
    <form id="signup" name="signup" method="post" action="/signup">
        <div class="form-group">
            <div class="row">
                <div class="form-group col-sm-6">
                    <!-- <label for="inputName" class="control-label">Name</label> -->
                    <input name="firstname" type="text" class="form-control" placeholder="First Name">
                </div>
                <div class="form-group col-sm-6">
                    <!-- <label for="inputName" class="control-label">Name</label> -->
                    <input name="lastname" type="text" class="form-control" placeholder="Last Name">
                </div>
            </div>

            <div class="form-group">
                {{!-- <label for="inputAddress">Address</label> --}}
                <input name="address" type="text" class="form-control" placeholder="1234 Main St">
            </div>

            <div class="form-row">
                <div class="form-group col-md-6">
                    {{!-- <label for="inputCity">City</label> --}}
                    <input name="city" type="text" class="form-control" placeholder="City">
                </div>
                <div class="form-group col-md-4">
                    {{!-- <label for="inputState">State</label> --}}
                    <select name="state" id="inputState" class="form-control">
                        <option selected>Choose...</option>
                        <option>AK</option>
                        <option>AZ</option>
                        <option>CA</option>
                        <option>CO</option>
                        <option>CT</option>
                        <option>DE</option>
                        <option>FL</option>
                        <option>GA</option>
                        <option>HI</option>
                        <option>ID</option>
                        <option>IL</option>
                        <option>KS</option>
                        <option>MA</option>
                        <option>NV</option>
                        <option>NM</option>
                        <option>UT</option>
                        <option>WA</option>
                    </select>
                </div>
                <div class="form-group col-md-2">
                    {{!-- <label for="inputZip">Zip</label> --}}
                    <input name="zip" type="text" class="form-control" id="inputZip" placeholder="Zip">
                </div>
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="form-group col-sm-12">
                        <!-- <label for="inputEmail" class="control-label">Email</label> -->
                        <input name="email" type="email" class="form-control" id="inputEmail" placeholder="Email"
                            data-error="Please enter a valid email address." required>
                        <div class="help-block with-errors"></div>
                    </div>
                </div>
                <div class="form-group">
                    {{!-- <label for="inputPassword" class="control-label">Password</label> --> --}}

                    <div class="row">
                        <div class="form-group col-sm-6">
                            <input name="password" type="password" data-minlength="6" class="form-control"
                                id="inputPassword" placeholder="Password - minimum of six characters" required>
                            &nbsp; <div class="help-block"></div>
                        </div>
                        <div class="form-group col-sm-6">
                            <input name="username" type="username" class="form-control" id="nputusername"
                                placeholder="Username">
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group col-sm-10"></div>
                        <div class="form-group col-sm-2" id="btnDiv">
                            <button href="/dashboard" class="btn btn-primary" role="button" aria-pressed="true" value="Sign Up">Sign Up</button>
                        </div>
                    </div>
                </div>
                {{!-- <div class="form-group">  --}}
                {{!-- <button id="submitSignUp" type="submit" class="btn btn-primary">Sign Up</button> --}}
            </div>
    </form>
</div>

