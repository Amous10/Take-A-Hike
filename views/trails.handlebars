<ul>
    {{#each hike}}
  

    <div class="card border border-success ready" id={{ this.id}}>
        <div class="card-body">
            <p><span> ID:</span> {{ this.id}}</p>
            <p><span> Name:</span> {{ this.name}}</p>
            <p><span> Summary:</span> {{ this.summary}}</p>
             <p><span> Difficulty:</span> {{ this.difficulty}}</p>
              <p><span> Location:</span> {{ this.location}}</p>

            <button type="button" class="btn btn-info" data-myval={{ this.id}}>Save This Hike</button>

        </div>

    </div>

    <br>

    {{/each}}
</ul>